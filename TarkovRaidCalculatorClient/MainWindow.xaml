<Window x:Class="TarkovRaidCalculatorClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TarkovRaidCalculatorClient"
        mc:Ignorable="d"
        Title="Login" Height="200" Width="300">
    <Grid>
        <Label Content="Email:" Margin="17,16,29,6"/>
        <Label x:Name="password" Content="Password:" Margin="17,58,10,20"/>
        <Label x:Name="WrongLoginLabel" Content="Wrong email or password" Margin="17,93,-17,-93" Foreground="Red" Visibility="Hidden"/>
        <PasswordBox x:Name="passowrdField" HorizontalAlignment="Left" Margin="23,77,0,0" VerticalAlignment="Top" Width="248"/>
        <TextBox x:Name="emailField" HorizontalAlignment="Left" Margin="23,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248" TextChanged="TextBox_TextChanged_2"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="23,122,0,0" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Window>
